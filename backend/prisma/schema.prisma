// backend/prisma/schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["selectRelationCount"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Correct enum definition without 'export'
enum Role {
  EXPLORER
  PROMPT_ENGINEER
}

// Correct enum definition without 'export'
enum NotificationType {
  NEW_FOLLOWER
  PROMPT_LIKE
  PROMPT_COMMENT
}

model User {
  id                 String         @id @default(cuid())
  name               String?
  username           String?        @unique
  email              String?        @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  role               Role           @default(EXPLORER)
  createdAt          DateTime       @default(now())
  bio                String?        @db.Text
  accounts           Account[]
  sessions           Session[]
  prompts            Prompt[]
  followedBy         Follows[]      @relation("following")
  following          Follows[]      @relation("follower")
  likes              Like[]
  comments           Comment[]
  teams              TeamMember[]   // Added for Teams feature
  ownedTeams         Team[]         // Added for Teams feature (teams this user owns)
  notifications      Notification[] @relation("RecipientNotifications") // Notifications received
  actedNotifications Notification[] @relation("ActorNotifications") // Actions performed
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Prompt {
  id            String         @id @default(cuid())
  title         String
  description   String         @db.Text
  tags          String[]
  category      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  author        User           @relation(fields: [authorId], references: [id])
  authorId      String
  likes         Like[]
  comments      Comment[]
  forkedFromId  String?
  forkedFrom    Prompt?        @relation("Fork", fields: [forkedFromId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  forks         Prompt[]       @relation("Fork")
  teamId        String?        // Added for Teams feature
  team          Team?          @relation(fields: [teamId], references: [id]) // Added for Teams feature
  notifications Notification[] // Added for Notifications
}

model Follows {
  followerId  String
  followingId String
  follower    User @relation("follower", fields: [followerId], references: [id])
  following   User @relation("following", fields: [followingId], references: [id])
  @@id([followerId, followingId])
}

model Like {
  userId   String
  promptId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt   Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  @@id([userId, promptId])
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  prompt    Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  promptId  String
}

// --- Team Models ---
model Team {
  id        String       @id @default(cuid())
  name      String
  createdAt DateTime     @default(now())
  ownerId   String
  owner     User         @relation(fields: [ownerId], references: [id])
  members   TeamMember[]
  prompts   Prompt[]

  @@index([ownerId])
}

model TeamMember {
  userId String
  teamId String
  role   String   @default("MEMBER") // e.g., "ADMIN", "MEMBER"
  joinedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
  @@index([teamId])
}

// --- Notification Model ---
model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  read        Boolean          @default(false)
  createdAt   DateTime         @default(now())
  recipientId String
  recipient   User             @relation("RecipientNotifications", fields: [recipientId], references: [id], onDelete: Cascade)
  actorId     String
  actor       User             @relation("ActorNotifications", fields: [actorId], references: [id], onDelete: Cascade)
  promptId    String?
  prompt      Prompt?          @relation(fields: [promptId], references: [id], onDelete: Cascade)

  @@index([recipientId])
  @@index([actorId])
  @@index([promptId])
}